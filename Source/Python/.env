# WartungsManager Umgebungsvariablen
# Diese Datei enthält sensible Konfigurationsdaten
# NICHT in Git committen!

# Flask Konfiguration
SECRET_KEY=wartungsmanager-prod-key-2025-super-secret
FLASK_ENV=production

# Datenbank
DATABASE_URL=sqlite:///C:/database/wartungsmanager.db

# Shelly IoT Integration
# WICHTIG: Diese Werte anpassen an Ihre Shelly-Installation!
SHELLY_ENABLED=true
SHELLY_IP=192.168.0.100
SHELLY_MODEL=Shelly1PM
SHELLY_USERNAME=
SHELLY_PASSWORD=
SHELLY_TIMEOUT=10

# Mail Server (optional für Wartungserinnerungen)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=
MAIL_PASSWORD=

# Logging
LOG_TO_STDOUT=false

